@model BookStore.ViewModels.BookViewModel

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Book Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                <h3>Are you sure you want to delete this book?</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                           something goes here? 
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dd>
                            @Html.DisplayFor(model => model.Edition)
                        </dd>

                        <dd>
                            @Html.DisplayFor(model => model.Binding)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Isbn)
                        </dt>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ThumbnailImage)
                        </dd>

                        <dd>
                            @Html.DisplayFor(model => model.LargeImage)
                        </dd>

                        <dd>
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "Books", FormMethod.Post,
new { data_bind = "submit: deleteBook" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center"
                         data-bind="visible: !sending()">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <button type="button" class="btn btn-default"
                                data-dismiss="modal">
                            Cancel
                        </button>|
                    </div>
                    <div class="progress" data-bind="visible: sending">
                        <div class="progress-bar progress-bar-info progress-bar-striped active"
                             role="progressbar" aria-valuenow="100"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: 100%">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                }
            </div><!-- /.modal-footer -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
